{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "node",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/session-manager/dockerfile-dev",
				"context": "${workspaceFolder}/session-manager",
				"pull": true
			},
			"node": {
				"package": "${workspaceFolder}/session-manager/package.json"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": [
				"docker-build"
			],
			"platform": "node",
			"node": {
				"package": "${workspaceFolder}/session-manager/package.json"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"DEBUG": "*",
					"NODE_ENV": "development"
				},
				"command": "node --inspect=0.0.0.0:9229 session-manager.js",
			},
			"node": {
				"package": "${workspaceFolder}/session-manager/package.json",
				"enableDebugging": true
			}
		},
		{
			"label": "Run Manager Container",
			"type": "shell",
			"command": "docker run -p 8080:8080 -p 9229:9229 --rm --name manager session-manager",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"dependsOn": [],
			"detail": "Runs the Docker container with port mapping"
		}
	]
}